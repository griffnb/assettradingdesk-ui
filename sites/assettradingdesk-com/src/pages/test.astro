    <title>Test Embedded page</title>

    <style>
      #reg-iframe {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        max-width: 100%;
        max-height: 100%;
        overflow: hidden;
        display: none;
      }

      #open-registration-modal {
        margin: 2.5rem auto 0;
        padding: 1rem;
        background-color: #2563eb;
        color: #ffffff;
        font-weight: 700;
        font-size: 1.125rem;
        font-family: "Poppins", sans-serif;
        border-radius: 0.375rem;
        cursor: pointer;
        max-width: max-content;
      }
    </style>

    <slot name="header" />
  </head>
  <body>
    <iframe
      id="reg-iframe"
      src="http://localhost:4321/embed?a=123&lp=123"
      allow="autoplay"
      sandbox="allow-forms allow-same-origin allow-scripts"
    ></iframe>

    <div id="open-registration-modal">
      Register Now!
    </div>

    <script>
      const iframe = document.getElementById('reg-iframe') as HTMLIFrameElement;
      const openerButton = document.getElementById('open-registration-modal');

      if (iframe && openerButton) {
        openerButton.addEventListener('click', () => {
          iframe.style.display = 'block';
          iframe.contentWindow?.postMessage({ type: 'focusFirstInput' }, '*');
        });
      }

      if (iframe) {
        window.addEventListener('message', (e) => {
          if (e.data.type === "modalClosed") {
            iframe.style.display = 'none';
          }
        });
      }
    </script>
  </body>
