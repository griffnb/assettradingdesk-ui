{
  "mcpServers": {
    "ui_code_tools": {
      "type": "stdio",
      "command": "./scripts/make_mcp.sh",
      "args": []
    },

    "shadcn": {
      "command": "npx",
      "args": ["shadcn@latest", "mcp"]
    },

    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"]
    },
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"],
      "type": "stdio"
    },
    "figma": {
      "type": "http",
      "url": "https://mcp.figma.com/mcp"
    }
  }
}
